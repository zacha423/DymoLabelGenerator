extends layout
include mixins/card
include mixins/printingCard

block content
  script(type="module", src="javascripts/return.js")
  h1.text-center= title
  .row
    .col
      +card('Returned Information')
        .row
          .col#labelFormWrapper
            .form-group
              label(for="asset") Asset Tag
              input#asset.form-control(type="text",name="asset")
            .form-group
              label(for="name") Faculty/Staff Name
              input#name.form-control(type="text",name="name")
            //- .form-group 
              label(for="reason2") Return Reason 
              input#reason2.form-control(type="text",name="reason")
            .form-group
              label(for="reason") Return Reason
              select#reason.form-control
                option(selected, disabled) Enter a custom reason or select one 
                option(value="Lifecycle") Old Device from Lifecycle Replacement
                option(value="Bumpdown") Staff/Faculty Departure - Bumpdown Stock
                option(value="Voucher") Staff/Faculty Departure - Voucher Stock
                option(value="Repair") Repair
            .form-group 
              label(for="ticketno") Ticket Number 
              input#ticketno.form-control(type="text",name="reason")
          .col.d-flex.align-items-center.justify-content-center 
            img#labelImage(src="", alt="label preview").border
  .row
    .col
      +card('Print Controls', 'info')
        +printingCard

